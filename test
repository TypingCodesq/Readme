function GetServerRegion()
    local http = game:GetService("HttpService")
    
    local result
    local g, b = pcall(function()
        result = http:JSONDecode(http:GetAsync("https://api4.my-ip.io/ip.json"))
    end)

    local ip = result and result.ip
    if ip then
        print("Server IP: " .. tostring(ip))
    else
        warn("Failed to retrieve server IP. Error: " .. tostring(b))
        return nil, nil
    end
    
    if g and ip then
        local location
        local good, bad = pcall(function()
            location = http:JSONDecode(http:GetAsync("http://ip-api.com/json/" .. ip))
        end)
        if good and location.region and location.regionName then
            return location.region, location.regionName
        else
            warn("Failed to fetch server geo location. Error: " .. tostring(bad))
            return nil, nil
        end
    else
        warn("Failed to process server IP. Error: " .. tostring(b))
        return nil, nil
    end
end
